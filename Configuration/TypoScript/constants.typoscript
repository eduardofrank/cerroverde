############
### PAGE ###
############
page {
    logo {
        file = EXT:cerroverde/Resources/Public/Images/logo.svg
        fileInverted = EXT:cerroverde/Resources/Public/Images/logo-inverted.svg
        height = 52
        width = 250
        alt = cerroverde
        linktitle = cerroverde
    }
    favicon {
        file = EXT:cerroverde/Resources/Public/Icons/favicon.ico
    }
    fluidtemplate {
        layoutRootPath = EXT:cerroverde/Resources/Private/Layouts/Page/
        partialRootPath = EXT:cerroverde/Resources/Private/Partials/Page/
        templateRootPath = EXT:cerroverde/Resources/Private/Templates/Page/
    }
}


##################
### EXTENSIONS ###
##################
plugin.bootstrap_package {
    view {
        layoutRootPath = EXT:cerroverde/Resources/Private/Layouts/
        partialRootPath = EXT:cerroverde/Resources/Private/Partials/
        templateRootPath = EXT:cerroverde/Resources/Private/Templates/
    }
}


########################
### CONTENT ELEMENTS ###
########################
plugin.bootstrap_package_contentelements {
    view {
        layoutRootPath = EXT:cerroverde/Resources/Private/Layouts/ContentElements/
        partialRootPath = EXT:cerroverde/Resources/Private/Partials/ContentElements/
        templateRootPath = EXT:cerroverde/Resources/Private/Templates/ContentElements/
    }
}


################################
### BOOTSTRAP SCSS CONSTANTS ###
################################
plugin.bootstrap_package.settings.scss {
    primary = #eb3e4a
    secondary = #013859
}

