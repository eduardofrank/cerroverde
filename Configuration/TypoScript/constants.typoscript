plugin.tx_news {
        view.twb {
                templateRootPath = EXT:cerroverde/Resources/Private/Templates/Styles/Twb/Templates
                partialRootPath = EXT:cerroverde/Resources/Private/Templates/Styles/Twb/Partials/
                layoutRootPath = EXT:cerroverde/Resources/Private/Templates/Styles/Twb/Layouts/
        }
}

page.preloader.enable = 0
plugin.bootstrap_package.settings.scss.primary = #2A2A72
plugin.bootstrap_package.settings.scss.secondary = #FFA400
page.theme.copyright.enable = 0
page.theme.language.enable = 0
